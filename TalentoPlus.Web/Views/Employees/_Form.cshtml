@model TalentoPlus.Web.Models.EmployeeFormViewModel
@{
    var departments = ViewBag.Departments as IEnumerable<TalentoPlus.Application.DTOs.DepartmentDto> ?? Enumerable.Empty<TalentoPlus.Application.DTOs.DepartmentDto>();
}

<div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Documento</label>
        <input asp-for="Document" class="form-control" />
        <span asp-validation-for="Document" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Correo</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Nombres</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Apellidos</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Teléfono</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Dirección</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Cargo</label>
        <input asp-for="Position" class="form-control" />
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Salario</label>
        <input asp-for="Salary" class="form-control" type="text" inputmode="decimal" />
        <span class="text-muted small">Usa punto o coma para decimales.</span>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Fecha de ingreso</label>
        <input asp-for="HireDate" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Estado</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<TalentoPlus.Domain.Enums.EmployeeStatus>()" class="form-select"></select>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Nivel educativo</label>
        <select asp-for="EducationLevel" asp-items="Html.GetEnumSelectList<TalentoPlus.Domain.Enums.EducationLevel>()" class="form-select"></select>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label">Departamento</label>
        <select asp-for="DepartmentId" class="form-select">
            @foreach (var dept in departments)
            {
                <option value="@dept.Id">@dept.Name</option>
            }
        </select>
    </div>
    <div class="col-12 mb-3">
        <div class="d-flex justify-content-between align-items-center mb-1 textarea-label">
            <label class="form-label mb-0">Perfil profesional</label>
            <small class="text-muted">Describe habilidades, enfoque y logros.</small>
        </div>
        <textarea asp-for="Profile" class="form-control" rows="4" placeholder="Ej: Alta capacidad de aprendizaje, resolución de problemas y enfoque en automatización."></textarea>
    </div>
</div>
