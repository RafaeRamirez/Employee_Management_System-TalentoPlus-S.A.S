@model TalentoPlus.Web.Models.EmployeeFormViewModel
@{
    ViewData["Title"] = "Editar empleado";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Editar empleado</h2>
    <form asp-action="Edit" method="post" class="card shadow-sm border-0">
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            @await Html.PartialAsync("_Form", Model)
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-link">Cancelar</a>
            <button class="btn btn-primary" type="submit">Actualizar</button>
        </div>
    </form>
</div>
